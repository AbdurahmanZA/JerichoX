# JERICHO Security Platform Configuration

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_KEY=your_api_key_here

# Hikvision Integration
VITE_HIK_CONNECT_API_URL=https://apigateway.hik-connect.com
VITE_HIK_CONNECT_API_KEY=your_hik_connect_api_key
VITE_HIK_CONNECT_ENABLED=true

# Asterisk PBX Integration (Separate VM)
VITE_ASTERISK_VM_URL=https://asterisk-vm.local:8443
VITE_ASTERISK_API_URL=https://asterisk-vm.local:8443/api
VITE_ASTERISK_WS_URL=wss://asterisk-vm.local:8443/ws
VITE_SIP_DOMAIN=asterisk-vm.local
VITE_EMERGENCY_NUMBERS=911,999,112

# AI Integration (Separate VM)
VITE_AI_VM_URL=https://ai-vm.local:8444
VITE_AI_API_URL=https://ai-vm.local:8444/api
VITE_AI_WS_URL=wss://ai-vm.local:8444/ws
VITE_AI_MODELS_ENABLED=face_recognition,vehicle_detection,behavior_analysis

# Inter-VM Communication
VITE_INTER_VM_TOKEN=your_secure_inter_vm_token

# ESXi Infrastructure
VITE_SHARED_STORAGE_URL=nfs://storage.local:/jericho-data
